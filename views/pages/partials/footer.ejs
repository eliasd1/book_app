        <script>
            $("#popUp").hide();
            $(".section-update").hide();
            $("#update").on("click", function(){
                $(".section-update").toggle();
                $("#popUp").toggle()
            })
            $("#popUp").on("click", function(event){
                if(!($(event.target).hasClass("display-form")) && $(".section-update").is(":visible")){
                    $(".section-update").toggle();
                    $("#popUp").toggle()
                };
            })
            $(".hamburger-menu").on("click", function(){
                let opacity = $("#menu").css("opacity");
                if(opacity === "0"){
                    $("#menu").css("opacity", "1");
                    $("#menu").css("z-index", "1000")
                } else{
                    $("#menu").css("opacity", "0");
                }
            })
        </script>
